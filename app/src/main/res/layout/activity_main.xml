<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/back"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="50sp"
        android:layout_marginRight="40sp"
        android:src="@drawable/cart"
        android:padding="20sp"
        android:elevation="6dp"
        android:background="@color/colorPrimary"
        android:id="@+id/fab1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">










    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >









        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:id="@+id/frm1"
            android:layout_margin="16dp"
            android:background="#fff"
            android:elevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stainless-Steel-Kadhai"
                android:layout_marginLeft="20sp"
                android:id="@+id/name1"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#000"
                />
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="200dp"
               android:layout_below="@+id/name1"
               android:src="@drawable/kadai"
               android:id="@+id/img1"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img1"
                    android:text="PRICE"
                    android:id="@+id/p1"
                    android:textColor="#000"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/p1"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="30sp"
                    android:text="250rs/ps"
                    android:id="@+id/cp1"
                    android:textColor="#000"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:layout_below="@+id/img1"/>
                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/add"
                    android:layout_below="@+id/img1"
                    android:layout_toRightOf="@id/cp1"
                    android:layout_marginLeft="30sp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/add1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:id="@+id/q1"
                    android:layout_below="@+id/img1"
                    android:layout_toRightOf="@id/add1"
                    android:textColor="#000"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"/>

                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/remove"
                    android:layout_below="@id/img1"
                    android:layout_toRightOf="@id/q1"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/remove1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show discription"
                    android:layout_below="@id/p1"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:layout_marginTop="15dp"
                    android:id="@+id/disc1"
                    android:layout_marginLeft="20dp"/>


            </RelativeLayout>
        </FrameLayout>

        <FrameLayout
